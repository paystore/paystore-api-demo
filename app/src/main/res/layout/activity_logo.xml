<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingTop="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.phoebus.payments.demo.LogoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Logo image:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            android:textSize="10sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/image_Logo"
            android:layout_width="200dp"
            android:layout_height="70dp"

            app:srcCompat="@android:drawable/ic_menu_gallery">

        </ImageView>

        <TextView
            android:id="@+id/logo_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Logo value"
            android:textSize="8sp"

            >

        </TextView>


        <Button
            android:id="@+id/get_logo_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="get logo">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Receipt Logo image:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="10sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/image_receipt_Logo"
            android:layout_width="200dp"
            android:layout_height="70dp"

            app:srcCompat="@android:drawable/ic_menu_gallery">

        </ImageView>

        <TextView
            android:id="@+id/logo_receipt_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Receipt logo value"
            android:textSize="8sp"

            >

        </TextView>

        <Button
            android:id="@+id/receipt_logo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="get receipt logo">

        </Button>


    </LinearLayout>

</LinearLayout>