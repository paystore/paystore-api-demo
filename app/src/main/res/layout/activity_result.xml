<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.phoebus.payments.demo.ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/responseDataTV" />

            <TableLayout
                android:id="@+id/dataTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1" />

            <TextView
                android:id="@+id/tf_receipt_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:text="@string/clientViaTV" />

            <TextView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFED9"
                android:fontFamily="monospace"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/tf_receipt_merchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:text="@string/merchantViaTV" />

            <TextView
                android:id="@+id/webviewMerchant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFED9"
                android:fontFamily="monospace"
                android:textSize="12dp"
                />

            <Button
                android:id="@+id/doConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:visibility="invisible"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
